{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "lib": ["DOM", "ES2022"],
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "lib",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2020",
    "typeRoots": ["./typings", "./node_modules/@types"],
    "paths": {
      "matrix-js-sdk": ["./lib/matrix-js-sdk/index"],
      "matrix-js-sdk/*": ["./lib/matrix-js-sdk/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "typings"]
}
